<div>
    <h1>ログイン</h1>

    <%= form_with url: login_path, local: true do |form| %>
      <div>
        <%= form.label "メールアドレス", class: "block font-medium" %>
        <%= form.text_field :email, class: "w-full border-[2px] rounded-[12px] px-6 py-2" %>
      </div>

      <div>
        <%= form.label "パスワード", class: "block font-medium" %>
        <%= form.password_field :password, class: "w-full border-[2px] rounded-[12px] px-6 py-2" %>
      </div>

      <div>
        <%= form.submit "ログイン", class: "w-full mt-12 bg-blue-600 text-white px-4 py-2 rounded-[8px] hover:bg-blue-600" %>
      </div>
    <% end %>
    <div class="mt-4">
      <p class="text-center">アカウントをお持ちでないですか？<br> <%= link_to "新規登録", new_user_path, class: "border-b" %></p>
    </div>
</div>
