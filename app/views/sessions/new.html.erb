<h1 class="text-2xl font-bold mb-4">ログイン</h1>

<%= form_with url: login_path, local: true, class: "space-y-4" do |form| %>
  <div>
    <%= form.label :email, class: "block font-medium" %>
    <%= form.text_field :email, class: "w-full border rounded px-2 py-1" %>
  </div>

  <div>
    <%= form.label :password, class: "block font-medium" %>
    <%= form.password_field :password, class: "w-full border rounded px-2 py-1" %>
  </div>

  <div>
    <%= form.submit "ログイン", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  </div>
<% end %>

